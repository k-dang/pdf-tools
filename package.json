{
  "name": "pdf-tools",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "3.7.4",
    "typescript": "^5"
  },
  "scripts": {
    "dev": "bun run --filter=@k-dang/pdf-tools dev",
    "build": "bun run --filter=@k-dang/pdf-tools build",
    "check": "tsc --noEmit",
    "format": "prettier --write ."
  }
}
